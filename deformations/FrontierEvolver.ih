  // 		  neighbor2.at(l) = (c+1); 
  // 		  if ( points.find(neighbor2) != points.end() ) 
  // 		    {
  // 		      nb++; 
  // 		      std::cout << neighbor2 << myDImage( neighbor2 ) << std::endl; 
  // 		      if ( myDImage( neighbor2 )>=0 ) nbPos++; 
  // 		    } 
  // 		  neighbor2.at(l) = (c-1); 
  // 		  if ( points.find(neighbor2) != points.end() ) 
