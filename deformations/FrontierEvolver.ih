  // trace.info() << "DT..." << std::endl;  
  ///////// end debug

  /// FMM 
  
  //predicate definition
  typedef TwoLabelsPredicate<LImage, std::equal_to<Label> > LabelPredicate; 
  typedef BinaryPointPredicate<LabelPredicate, 
    typename Domain::Predicate, std::logical_and<bool> > FMMPointPredicate; 
  LabelPredicate predOnLabels( myLImage, myInnerLabel, myOuterLabel );
  FMMPointPredicate pred( predOnLabels, myLImage.domain().predicate(), std::logical_and<bool>() );   

